<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" android:background="#eeeeee"
    android:paddingBottom="@dimen/activity_vertical_margin">
    <TextView
        android:id="@+id/notice_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목"
        android:textSize="18sp"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/notice_date_txt"
        android:layout_below="@id/notice_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2015-1-1"
        android:textSize="14sp"
        android:textColor="#B3000000"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/notice_date_txt"
        >
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <ListView
                android:id="@+id/notice_menu"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
