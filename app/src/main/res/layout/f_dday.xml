<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="8dp">

        <RelativeLayout
            android:id="@+id/dday_ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:background="@drawable/d_bluebox">
            <TextView
                android:id="@+id/dday_txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="15dp"
                android:textSize="60sp"
                android:textColor="#66eeeeee"
                android:text="수능"/>
            <TextView
                android:id="@+id/dday_txt_sat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="80sp"
                android:textColor="#eeeeee"
                android:text="D-30"/>
        </RelativeLayout>
            <RelativeLayout
                android:id="@+id/dday_llm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dday_ll1"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:elevation="8dp"
                android:padding="10dp"
                android:background="#dcdcdc">
                <TextView
                    android:id="@+id/dday_txtm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textColor="#9a000000"
                    android:text="수능"
                    android:gravity="center_horizontal" />
                <TextView
                    android:id="@+id/dday_txt_m"
                    android:layout_below="@id/dday_txtm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="80sp"
                    android:textColor="#eeeeee"
                    android:background="@drawable/d_bluebox"
                    android:text="D-30"
                    android:gravity="center_horizontal" />
           
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/dday_ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dday_llm"
            android:elevation="2dp"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:background="@drawable/d_bluebox">
            <TextView
                android:id="@+id/dday_txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="15dp"
                android:textSize="60sp"
                android:textColor="#66eeeeee"
                android:text="D-day"/>
            <TextView
                android:id="@+id/dday_txt_susi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="80sp"
                android:textColor="#eeeeee"
                android:text="D - 57"/>
        </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>